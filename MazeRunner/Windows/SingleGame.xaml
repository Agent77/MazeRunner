<Window x:Class="MazeRunner.Windows.SingleGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeRunner.Windows"
        xmlns:controls="clr-namespace:MazeRunner.Controls"
        mc:Ignorable="d"
        Title="SingleGame" Height="350" Width="350">

    <Canvas>
        <Viewbox Canvas.Top="0" Canvas.Left="35">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnmain" Click="btnmain_Click" Margin="5" Padding="5" Content="Main Menu"/>
                <Button x:Name="btnRestart" Click="btnRestart_Click" Margin="5" Padding="5" Content="Restart Game"/>
                <Button x:Name="btnSolve" Click="btnSolve_Click" Margin="5" Padding="5" Content="Restart Game"/>
            </StackPanel>
        </Viewbox>
        <Viewbox Canvas.Top="40" Canvas.Left="10">
        <controls:MazeBoard x:Name="Board" GoalPos="{Binding VM_GoalPos}"  InitialPos="{Binding VM_InitialPos}" MazeString="{Binding VM_Maze}" Cols="{Binding VM_Cols}" Rows ="{Binding VM_Rows}" BorderBrush="Black" BorderThickness="2" Loaded="MazeBoard_Loaded" KeyDown="Board_KeyDown" Height="266" Width="322" Canvas.Left="10" Canvas.Top="43"/>
        </Viewbox>
    </Canvas>


</Window>
