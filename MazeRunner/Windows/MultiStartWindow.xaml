<Window x:Class="MazeRunner.Windows.MultiStartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeRunner.Windows"
        mc:Ignorable="d"
        Title="MultiStartWindow" Height="300" Width="300">
    <Grid>

        <controls:GameInfoControl HorizontalAlignment="Left" Height="135" Margin="32,105,0,0" VerticalAlignment="Top" Width="232"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,28,0,0" TextWrapping="Wrap" Text="List Of Games:" VerticalAlignment="Top"/>
        <ComboBox x:Name="GameList" HorizontalAlignment="Left" Margin="126,28,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button Content="Join Game" HorizontalAlignment="Left" Margin="126,80,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
