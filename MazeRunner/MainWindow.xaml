<Window x:Class="MazeRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeRunner"
        mc:Ignorable="d"
        Title="The Maze Runner!" Height="350" Width="525">
    <Canvas Background="DarkOliveGreen">
        <Image x:Name="logo" Source="/MazeRunner;component\Images\logo.jpg" Canvas.Left="177" Canvas.Top="20" Height="90"/>
        <Image Source="/MazeRunner;component\Images\mazerunner.jpeg" Canvas.Left="20" Canvas.Bottom="10" Height="140"/>
        <Button x:Name="single" Canvas.Left="135" Canvas.Top="120" FontSize="30" Background="LightBlue" Click="SingleClick" Content="Single Player" Width="250"/>
        <Button x:Name="multi" Canvas.Left="135" Canvas.Top="170" FontSize="30" Background="LightBlue" Click="MultiClick" Content="Multi Player" Width="250"/>
        <Button x:Name="settings" Canvas.Left="135" Canvas.Top="220" FontSize="30" Background="LightBlue" Click="SettingsClick" Content="Settings" Width="250"/>
    </Canvas>
</Window>
